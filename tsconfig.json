{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "noEmitHelpers": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": false,
    "skipLibCheck": true,
    "outDir": "release",
    "target": "es5",
    "typeRoots": [],
    "lib": [
        "es5",
        "es6",
        "es2015",
        "es2016",
        "es2017",
        "dom"
    ]
  },
  "files": [ "./src/index.ts" ],
  "exclude": [
    "./src/**/*.spec.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}